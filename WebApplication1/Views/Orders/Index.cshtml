@model IEnumerable<WebApplication1.Models.ModelVueOrders>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Ordered at", "Index", new { sortOrder = ViewBag.TimeSortParm })
            </th>
            <th>
                @Html.ActionLink("Status", "Index", new { sortOrder = ViewBag.StatusSortParm })
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.order_time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.order_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.order_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.order_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
